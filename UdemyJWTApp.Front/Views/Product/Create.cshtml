@model ProductCreateModel
@{
    Layout = "_Layout";
}
<form asp-action="Create" asp-controller="Product" method="post" class="container">
        <div class="form-group">
            <label >Ürün Adı:</label>
            <input asp-for="@Model.Description" class="form-control" />
        </div>
        <div class="form-group">
            <label >Fiyatı</label>
        <input asp-for="@Model.Price" class="form-control" />
        </div>
    <div class="form-group">
        <label>Stok Adedi</label>
        <input asp-for="@Model.Stock" class="form-control" />
    </div>
    <div class="form-group">
        <label>Ürünün Kategorisi</label>
        <select asp-for=@Model.CategoryId asp-items="@Model.CategorySelectList">

        </select>
    </div>
        <div class="text-danger" asp-validation-summary="All"></div>
        <button type="submit" class="btn btn-primary">Create</button>
</form>